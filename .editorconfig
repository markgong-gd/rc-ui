# editorconfig.org
root = true

[*]
# 缩进风格，可选配置有 tab 和 space
indent_style = space
# 缩进大小，可设定为 1-8 的数字，比如设定为 2 ，那就是缩进 2 个空格
indent_size = 2
# 编码格式，通常都是选 utf-8
charset = utf-8
# 去除多余的空格，比如你不小心在尾巴多打了个空格，它会给你自动去掉
trim_trailing_whitespace = true
# 在尾部插入一行
insert_final_newline = true
# 换行符
end_of_line = lf

[*.md]
trim_trailing_whitespace = false
